<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:elevation="23dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mein Account"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"/>




    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle"
        android:src="@mipmap/account_icon"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Benutzername"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Email"
            android:textColor="#A6A6A6A6"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:clickable="true"

        android:orientation="vertical"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Benutzername ändern"
            android:textColor="#000000"
            android:textSize="20sp"

            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/change_username_layout_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="6dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Passwort ändern"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="6dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Abmelden"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="6dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Account löschen"
            android:textColor="#ff0000"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/account_navigation_goToMyProfile"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#d9d9d9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@mipmap/account_icon" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Account"
                    android:textColor="#A6A6A6A6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_navigation_goToHomepage"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView41231322"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@mipmap/add_icon" />

                <TextView
                    android:id="@+id/textView4123123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Produkte"
                    android:textColor="#A6A6A6A6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_navigation_goToMyList"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView412313"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@mipmap/meine_listen_icon" />

                <TextView
                    android:id="@+id/textView423123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Meine Listen"
                    android:textColor="#A6A6A6A6" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>