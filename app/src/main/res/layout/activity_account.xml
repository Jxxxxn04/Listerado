<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_parentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:elevation="23dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Mein Account"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp">


            <ImageView
                android:id="@+id/has_invites_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/list_icon"/>
            
            <TextView
                android:id="@+id/has_invites_textview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="0"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:background="@drawable/circle_background"
                android:layout_gravity="bottom|end"
                android:gravity="center"
                android:textSize="11sp"/>
            
        </FrameLayout>
        

    </LinearLayout>






    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_imageView_Button"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle"
        android:src="@mipmap/account_icon"
        android:clickable="true"
        android:contentDescription="ImageView" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/myAccount_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Benutzername"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/myAccount_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Email"
            android:textColor="#A6A6A6A6"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"
        android:elevation="1.1dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/change_username_layout_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:elevation="1dp"
        android:background="#FFF"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|start"
            android:paddingStart="20dp"
            android:text="Benutzername ändern"
            android:textColor="#000000"
            android:textSize="20sp"

            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/change_email_layout_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:elevation="1dp"
        android:background="#FFF"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="6dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Email ändern"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_password_layout_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:elevation="1dp"
        android:background="#FFF"

        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="6dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Passwort ändern"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:elevation="1dp"
        android:background="#fff"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/logout_Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="6dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Abmelden"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_linearlayout_delete_user"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:elevation="1dp"
        android:background="#FFF"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="6dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Account löschen"
            android:textColor="#ff0000"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginTop="43dp">

        <LinearLayout
            android:id="@+id/account_navigation_goToMyProfile"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#d9d9d9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/account_movebar_Konto_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/account_icon" />


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/invite_textview_2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="0"
                        android:padding="4dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_background"
                        android:layout_gravity="bottom|end"
                        android:gravity="center"
                        android:textSize="11sp"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Account"
                    android:textColor="#A6A6A6A6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_navigation_goToHomepage"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView41231322"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@mipmap/add_icon" />

                <TextView
                    android:id="@+id/textView4123123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Startseite"
                    android:textColor="#A6A6A6A6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_navigation_goToMyList"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView412313"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@mipmap/meine_listen_icon" />

                <TextView
                    android:id="@+id/textView423123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Meine Listen"
                    android:textColor="#A6A6A6A6" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>