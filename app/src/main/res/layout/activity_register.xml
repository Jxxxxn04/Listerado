<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageView52"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@mipmap/app_icon_mipmap_white_background"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textView72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listerado"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center">


        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:background="@drawable/rectangle_for_login"
            android:gravity="left|center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">


            <EditText
                android:id="@+id/editTextRegisterUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:autofillHints=""
                android:background="@null"
                android:ems="10"
                android:hint="Benutzername"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#A1303032"
                android:textColorHint="#9A9A9A"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_for_login"
            android:gravity="left|center"
            android:layout_marginBottom="10dp">


            <EditText
                android:id="@+id/editTextRegisterEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:autofillHints=""
                android:background="@null"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="#A1303032"
                android:textColorHint="#9A9A9A"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_for_login"
            android:gravity="left|center"
            android:layout_marginBottom="10dp">


            <EditText
                android:id="@+id/editTextRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:autofillHints=""
                android:background="@null"
                android:ems="10"
                android:hint="Passwort"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="#A1303032"
                android:textColorHint="#9A9A9A"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_for_login"
            android:gravity="left|center"
            android:layout_marginBottom="10dp">


            <EditText
                android:id="@+id/editTextRegisterConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:autofillHints=""
                android:background="@null"
                android:ems="10"
                android:hint="Passwort bestÃ¤tigen"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="#A1303032"
                android:textColorHint="#9A9A9A"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginTop="55dp"
            android:text="Registrieren"
            android:background="@drawable/rectangle_for_login_button"
            android:textColor="#5F5F85"/>

        <TextView
            android:id="@+id/textViewSwitchToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Du hast bereits einen Account?"
            android:textAlignment="center"
            android:textColor="#A13F3F45" />
    </LinearLayout>
</LinearLayout>