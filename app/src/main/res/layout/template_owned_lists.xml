<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/my_lists_linearLayout"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:background="@drawable/rectangle_for_login"
        android:orientation="vertical">



        <TextView
            android:id="@+id/listName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Listenname"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/list_isFromUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="besitzer"
            android:textColor="#a6a6a6"
            android:textSize="20sp"
            android:gravity="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:layout_marginBottom="5dp">



            <RelativeLayout
                android:id="@+id/configure_list"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/mylists_background_add_user_to_list">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rename"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/add_user_to_list"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:background="@drawable/mylists_background_add_user_to_list">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/adduserlist"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/delete_list"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/mylists_background_delete_list">

                <ImageView
                    android:id="@+id/leave_delete_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/deletelist"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>