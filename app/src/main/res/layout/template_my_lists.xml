<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="40dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/list_background"
    android:elevation="8dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/listName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Liste 1"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_isFromUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:visibility="visible"
        android:text="none"
        android:textColor="#000"/>


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_alignParentBottom="true"
            android:id="@+id/configure_list"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/icon_settings"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:layout_alignParentBottom="true"
            android:id="@+id/add_user_to_list"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_add_user"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:layout_alignParentBottom="true"
            android:id="@+id/delete_list"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/icon_trashcan"
            android:layout_marginBottom="15dp"/>


    </RelativeLayout>

</LinearLayout>