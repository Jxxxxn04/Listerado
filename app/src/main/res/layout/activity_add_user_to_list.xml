<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Benutzer einladen"
        android:textSize="40sp"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_rectangles"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/addUserLists_inputText"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:background="@null"
            android:gravity="start|center"
            android:hint="@string/suchen"
            android:inputType="textAutoCorrect|text|textAutoComplete"
            android:textColor="#000000"
            android:textColorHint="#A6A6A6A6"
            android:textSize="18sp" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center|end">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/such_icon"
                app:srcCompat="@mipmap/search_icon" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/addUserToList_listView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:dividerHeight="30.0sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:listitem="@layout/template_add_user_to_list"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginTop="27dp">

        <LinearLayout
            android:id="@+id/addUserToList_navigation_goToMyProfile"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/addUserToList_movebar_Konto_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/account_icon" />


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/invite_textview_2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="0"
                        android:padding="4dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_background"
                        android:layout_gravity="bottom|end"
                        android:gravity="center"
                        android:textSize="11sp"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Account"
                    android:textColor="#A6A6A6A6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addUserToList_navigation_goToHomepage"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView41231322"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@mipmap/add_icon" />

                <TextView
                    android:id="@+id/textView4123123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Startseite"
                    android:textColor="#A6A6A6A6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addUserToList_navigation_goToMyList"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#d9d9d9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView412313"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@mipmap/meine_listen_icon" />

                <TextView
                    android:id="@+id/textView423123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Meine Listen"
                    android:textColor="#A6A6A6A6" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>